{
  "entrypoint": "index.html",
  "shell": "src/framapp-polymer-app/framapp-polymer-app.html",
  "fragments": [
    "src/admin/fp-admin-menu.html",
    "src/admin/fp-admin-page.html",
    "src/fp-home-page.html",
    "src/categories/fp-category-page.html",
    "src/products/fp-product-page.html",
    "src/categories/fp-category-selector.html",
    "src/fp-login-component.html",
    "bower_components/paper-button/paper-button.html",
    "bower_components/paper-icon-button/paper-icon-button.html",
    "src/stores/fp-routing-store.html",
    "bower_components/app-route/app-route.html"
  ],
  "sources": [
   "src/**/*",
   "bower.json"
  ],
  "extraDependencies": [
    "manifest.json",
    "images/*",
    "bower_components/webcomponentsjs/webcomponents-lite.js",
    "node_modules/redux/dist/redux.min.js",
    "node_modules/redux-thunk/dist/redux-thunk.min.js"
  ],
  "lint":{
    "rules": [ "polymer-1" ],
    "ignoreWarnings": ["databind-with-unknown-property"]
  },
  "builds": [{
    "bundle": true,
    "js": {"minify": true},
    "css": {"minify": true},
    "html": {"minify": true}
  }]
}
